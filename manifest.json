{
  "manifest_version": 3,
  "name": "v2rayA RoutingA Helper",
  "version": "1.3",
  "description": "Login to v2rayA, edit routingA rules (add/remove domain) from popup.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "RoutingA Helper",
    "default_icon": {
      "16": "icons/favicon_16.png",
      "48": "icons/favicon_48.png",
      "128": "icons/favicon_128.png"
    }
  },
  "icons": {
    "16": "icons/favicon_16.png",
    "48": "icons/favicon_48.png",
    "128": "icons/favicon_128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ]

  ,
  "background": {
    "service_worker": "background.js"
  }
}